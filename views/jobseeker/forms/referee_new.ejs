<form id="refereeForm"  class="grid-form">
    <fieldset>
        <legend>New Referee</legend>
        <div data-row-span="2">
            <div data-field-span="1">
                <label for="refereeName">Name</label>
                {{input  id="refereeName" }}
            </div>
            <div data-field-span="1">
                <label for="refereePosition">Position</label>
                {{input  id="refereePosition" }}
            </div>
        </div>
        <div data-row-span="1">
            <div data-field-span="1">
                <label for="refereeCompany">Company</label>
                {{input   id="refereeCompany" }}
            </div>
        </div>
        <div data-row-span="2">
            <div data-field-span="1">
                <label for="refereePhone">Phone</label>
                {{input  type="tel" id="refereePhone" }}
            </div>
            <div data-field-span="1">
                <label for="refereeMobile">Mobile</label>
                {{input  type="tel" id="refereeMobile" }}
            </div>
        </div>
        <div data-row-span="1">
            <div data-field-span="1">
                <label for="refereeEmail">Email</label>
                {{input   id="refereeEmail" type="email" }}
            </div>
        </div>
      </fieldset>
  
    
      <button  {{action "add"}} class="mdl-button mdl-js-button mdl-button--primary">Save</button>
      {{#link-to 'referees' classNames="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"}}Cancel{{/link-to}}
   
  </form>